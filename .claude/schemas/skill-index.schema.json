{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://loa.dev/schemas/skill-index.schema.json",
  "title": "Loa Skill Index",
  "description": "Schema for skill index.yaml files. Based on Vercel AI SDK and Anthropic tool-writing best practices.",
  "type": "object",
  "required": ["name", "version", "description", "triggers"],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9-]+$",
      "description": "Skill identifier (kebab-case)"
    },
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
      "description": "Semantic version"
    },
    "model": {
      "type": "string",
      "default": "native",
      "description": "Model binding for this skill. Use 'native' for Claude Code session, or a Hounfour alias (e.g., 'reviewer', 'reasoning') or provider:model-id from the provider registry."
    },
    "color": {
      "type": "string",
      "description": "Display color for skill UI"
    },
    "description": {
      "type": "string",
      "minLength": 50,
      "maxLength": 1024,
      "description": "Skill description (50-1024 characters). Should follow WHAT+WHEN+capabilities formula per Anthropic best practices."
    },
    "triggers": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1,
      "description": "Activation patterns for this skill"
    },
    "negative_triggers": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Phrases that should NOT trigger this skill (advisory, per Anthropic best practices)"
    },
    "examples": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "context": { "type": "string" },
          "user_says": { "type": "string" },
          "agent_action": { "type": "string" }
        }
      },
      "description": "Usage examples for skill invocation"
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "skill": { "type": "string" },
          "artifact": { "type": "string" }
        }
      },
      "description": "Skill dependencies"
    },
    "inputs": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "type": { "type": "string" },
          "pattern": { "type": "string" },
          "values": {
            "type": "array",
            "items": { "type": "string" }
          },
          "required": { "type": "boolean" },
          "description": { "type": "string" }
        },
        "required": ["name", "type", "description"]
      },
      "description": "Input parameter definitions"
    },
    "outputs": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "path": { "type": "string" },
          "condition": { "type": "string" },
          "description": { "type": "string" },
          "format": {
            "type": "string",
            "enum": ["summary", "detailed", "raw"],
            "default": "detailed",
            "description": "Output verbosity level"
          },
          "max_tokens": {
            "type": "integer",
            "minimum": 100,
            "maximum": 50000,
            "description": "Soft token limit for output"
          }
        },
        "required": ["path", "description"]
      },
      "description": "Output artifact definitions"
    },
    "protocols": {
      "type": "object",
      "properties": {
        "required": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "path": { "type": "string" },
              "purpose": { "type": "string" }
            }
          }
        },
        "recommended": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "path": { "type": "string" },
              "purpose": { "type": "string" }
            }
          }
        }
      },
      "description": "Protocol requirements"
    },
    "protocol_loading": {
      "type": "object",
      "properties": {
        "on_session_start": {
          "type": "array",
          "items": { "type": "string" }
        },
        "during_execution": {
          "type": "array",
          "items": { "type": "string" }
        },
        "before_clear": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "description": "Protocol loading order"
    },
    "effort_hint": {
      "type": "string",
      "enum": ["low", "medium", "high"],
      "description": "Recommended effort level. Maps to budget_tokens: low (~4K tokens), medium (~16K tokens), high (~64K tokens). Vercel AI SDK / Anthropic best practice."
    },
    "danger_level": {
      "type": "string",
      "enum": ["safe", "moderate", "high", "critical"],
      "default": "safe",
      "description": "Risk level affecting approval requirements. Based on Vercel AI SDK needsApproval."
    },
    "categories": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Semantic groupings for skill search. Based on Anthropic Tool Search patterns."
    },
    "inputExamples": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "input": { "type": "object" },
          "description": { "type": "string" }
        },
        "required": ["input"]
      },
      "description": "Native Anthropic input examples. Only Anthropic provider supports this natively."
    },
    "defer_loading": {
      "type": "boolean",
      "default": false,
      "description": "For future runtime support of deferred skill loading. TODO: Implement in #94 (Anthropic Context Features)."
    },
    "input_guardrails": {
      "type": "object",
      "description": "Skill-specific input guardrail configuration. Overrides global guardrails settings.",
      "properties": {
        "pii_filter": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true,
              "description": "Enable PII filtering for this skill"
            },
            "mode": {
              "type": "string",
              "enum": ["blocking", "parallel", "advisory"],
              "default": "blocking",
              "description": "Execution mode for PII filter"
            },
            "patterns": {
              "type": "object",
              "properties": {
                "api_keys": { "type": "boolean", "default": true },
                "emails": { "type": "boolean", "default": true },
                "phone_numbers": { "type": "boolean", "default": true },
                "ssn": { "type": "boolean", "default": true },
                "credit_cards": { "type": "boolean", "default": true },
                "file_paths": {
                  "type": "string",
                  "enum": ["anonymize", "redact", "ignore"],
                  "default": "anonymize"
                }
              }
            }
          }
        },
        "injection_detection": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true,
              "description": "Enable injection detection for this skill"
            },
            "mode": {
              "type": "string",
              "enum": ["blocking", "parallel", "advisory"],
              "default": "blocking",
              "description": "Execution mode for injection detection"
            },
            "threshold": {
              "type": "number",
              "minimum": 0,
              "maximum": 1,
              "default": 0.7,
              "description": "Score threshold for injection detection (0.0-1.0)"
            }
          }
        },
        "relevance_check": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": false,
              "description": "Enable relevance checking for this skill"
            },
            "mode": {
              "type": "string",
              "enum": ["blocking", "parallel", "advisory"],
              "default": "advisory",
              "description": "Execution mode for relevance check"
            },
            "confidence_threshold": {
              "type": "number",
              "minimum": 0,
              "maximum": 1,
              "default": 0.8,
              "description": "Confidence threshold for relevance (0.0-1.0)"
            }
          }
        }
      }
    },
    "events": {
      "type": "object",
      "description": "Event declarations for this skill. Enables inter-construct communication, workflow chaining, and dependency visualization. See event-envelope.schema.json for the event wire format.",
      "properties": {
        "emits": {
          "type": "array",
          "items": {
            "$ref": "event-envelope.schema.json#/$defs/eventRef"
          },
          "description": "Events this skill produces. Each emitted event becomes part of the pack's public event surface. Analogous to a service's published API endpoints."
        },
        "consumes": {
          "type": "array",
          "items": {
            "$ref": "event-envelope.schema.json#/$defs/consumeRef"
          },
          "description": "Events this skill subscribes to. The consumer-driven contract pattern (Pact) can be used to prevent upstream producers from breaking this skill's expectations."
        }
      },
      "additionalProperties": false
    }
  },
  "examples": [
    {
      "name": "implementing-tasks",
      "version": "1.1.0",
      "model": "sonnet",
      "color": "yellow",
      "description": "Use this skill IF user needs to implement sprint tasks from grimoires/loa/sprint.md, OR feedback has been received in engineer-feedback.md that needs addressing.",
      "triggers": ["/implement", "implement sprint"],
      "effort_hint": "medium",
      "danger_level": "moderate",
      "categories": ["implementation"],
      "inputExamples": [
        {
          "input": { "sprint_id": "sprint-1" },
          "description": "First sprint of a new project"
        }
      ],
      "inputs": [
        {
          "name": "sprint_id",
          "type": "string",
          "pattern": "^sprint-[0-9]+$",
          "required": true,
          "description": "Sprint identifier (e.g., sprint-1)"
        }
      ],
      "outputs": [
        {
          "path": "grimoires/loa/a2a/sprint-{id}/reviewer.md",
          "description": "Implementation report for senior lead review",
          "format": "detailed"
        }
      ]
    }
  ]
}
